<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.PaymentTracker" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/bg_blue</item>
        <item name="colorSecondary">@color/text_accent</item>
        <item name="colorSurface">@color/bg_panel</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:statusBarColor">@color/bg_dark_telegram</item>
        <item name="android:windowBackground">@color/bg_dark_telegram</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/text_primary</item>
